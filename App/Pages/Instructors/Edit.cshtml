            </div>
            <div class="form-group">
                <label asp-for="Instructor.LastName" class="control-label"></label>
                <input asp-for="Instructor.LastName" class="form-control" />
                <span asp-validation-for="Instructor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.PhoneNr" class="control-label"></label>
                <input asp-for="Instructor.PhoneNr" class="form-control" />
                <span asp-validation-for="Instructor.PhoneNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.LessonsGiven" class="control-label"></label>
                <input asp-for="Instructor.LessonsGiven" class="form-control" />
                <span asp-validation-for="Instructor.LessonsGiven" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
