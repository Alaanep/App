@{
    ViewData["Title"] = "Delete";
    ViewData["Subtitle"] = Model?.GetType()?.Name?.Replace("Page",string.Empty)??"Unspecified";
    Layout = "_Layout";
    var itemId = Model?.Item?.Id ?? string.Empty;
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["Subtitle"]</h4>
<hr />
<dl class="row">

@RenderBody()

<form method="post"
    asp-route-id="@itemId"
    asp-route-handler="Delete"
    asp-route-order="@Model.CurrentSort"
    asp-route-idx="@Model.PageIndex" 
    asp-route-filter="@Model.CurrentFilter" > 
    <input type="hidden" asp-for-id="@itemId" />
    <input type="submit" value="Delete" class="btn btn-danger" />&nbsp

       <a asp-page="Index" 
       asp-page-handler="Index" 
       asp-route-order="@Model.CurrentSort"
       asp-route-idx="@Model.PageIndex" 
       asp-route-filter="@Model.CurrentFilter"
       >Back to List</a>
</form>
</dl>
