@page
@model Pages.Party.StudentsPage

@using App.Pages.Extensions
@{
    
    Layout = "_Index";
}

<body>
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.FullName))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >@nameof(Model.Item.FullName)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.FirstName))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.FirstName)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.LastName))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.LastName)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.PhoneNr))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.PhoneNr)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.Email))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.Email)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.Weight))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.Weight)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.Height))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.Height)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.ShoeSize))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.ShoeSize)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.EnrollmentDate))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.EnrollmentDate)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-order="@Model.SortOrder(nameof(Model.Item.Level))"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter">@nameof(Model.Item.Level)</a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
    <tr>
        @Html.MyEditorForIndexTableBody(modelItem => item.FullName)
        @Html.MyEditorForIndexTableBody(modelItem => item.FirstName)
        @Html.MyEditorForIndexTableBody(modelItem => item.LastName)
        @Html.MyEditorForIndexTableBody(modelItem => item.PhoneNr)
        @Html.MyEditorForIndexTableBody(modelItem => item.Email)
        @Html.MyEditorForIndexTableBody(modelItem => item.Weight)
        @Html.MyEditorForIndexTableBody(modelItem => item.Height)
        @Html.MyEditorForIndexTableBody(modelItem => item.ShoeSize)
        @Html.MyEditorForIndexTableBody(modelItem => item.EnrollmentDate)
        @Html.MyEditorForIndexTableBody(modelItem => item.Level)

        <td>
            <a asp-page="./Edit" 
               asp-page-handler="Edit" 
               asp-route-id="@item.Id"    
               asp-route-order="@Model.CurrentSort"
               asp-route-idx="@Model.PageIndex" 
               asp-route-filter="@Model.CurrentFilter" 
               >Edit</a>&nbsp;

            <a asp-page="./Details" 
               asp-page-handler="Details" 
               asp-route-id="@item.Id"    
               asp-route-order="@Model.CurrentSort"
               asp-route-idx="@Model.PageIndex" 
               asp-route-filter="@Model.CurrentFilter" 
               >Details</a>&nbsp;

            <a asp-page="./Delete" 
               asp-page-handler="Delete" 
               asp-route-id="@item.Id"    
               asp-route-order="@Model.CurrentSort"
               asp-route-idx="@Model.PageIndex" 
               asp-route-filter="@Model.CurrentFilter" 
               >Delete</a>        
       </td>
    </tr>
}
    </tbody>
</table>
</body>